<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/blog_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:placeholderImage="@color/loading_color"
        app:placeholderImageScaleType="fitCenter"
        app:actualImageScaleType="fitCenter"
        app:roundedCornerRadius="2dp"
        />
    <TextView
        android:id="@+id/blog_last_update"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/blog_name"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_toRightOf="@+id/blog_avatar"
        android:layout_toEndOf="@+id/blog_avatar"
        android:layout_toLeftOf="@+id/blog_last_update"
        android:layout_toStartOf="@+id/blog_last_update"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end" />
    <TextView
        android:id="@+id/blog_title"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_toRightOf="@+id/blog_avatar"
        android:layout_toEndOf="@+id/blog_avatar"
        android:layout_toLeftOf="@+id/blog_last_update"
        android:layout_toStartOf="@+id/blog_last_update"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/blog_name"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_toRightOf="@+id/blog_avatar"
        android:layout_toEndOf="@+id/blog_avatar"
        android:layout_below="@id/blog_title"
        android:layout_marginTop="8dp"
        app:srcCompat="@color/divider_color_gray"
        />
</RelativeLayout>